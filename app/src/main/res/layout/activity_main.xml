<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="HomeBudget"
        android:textAlignment="center"
        android:textSize="22sp"
        android:padding="12dp"
        android:textColor="#FC8512"
        />
    <ImageButton
        android:id="@+id/ibInfo"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="50dp"
        android:padding="12dp"
        android:background="@mipmap/info_i"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tvShowName"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="Show Name"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:text="Log Out"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

    <TextView
        android:id="@+id/tvAddIncome"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="Add\nIncome"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="2.5dp"
        android:padding="12dp"
        android:background="@drawable/income_add"
        />
        <TextView
            android:id="@+id/tvAddExpenses"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Add\nExpenses"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2.5dp"
            android:padding="12dp"
            android:background="@drawable/expenses_add"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tvShowIncome"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Show \nIncome"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:padding="12dp"
            android:background="@drawable/income_show"
            />
        <TextView
            android:id="@+id/tvShowExpenses"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Show \nExpenses"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:padding="12dp"
            android:background="@drawable/expenses_show"
            />
    </LinearLayout>
    <View
        android:layout_height="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#00AA44"
        /><ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvIncomeShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Income      = 0"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="#00FF00"
            />
        <TextView
            android:id="@+id/tvExpensesShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Expenses   = 0"
            android:padding="12dp"
            android:textSize="15sp"
            android:textColor="#FF0000"
            />
        <TextView
            android:id="@+id/tvTotalBalanceShow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Balance       = 0"
            android:padding="12dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000066"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>