<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:text="ADD EXPENSES"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="40sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        />
    <EditText
        android:id="@+id/etExpensesCategory"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="Add Your Expenses Category"
        android:background="@drawable/front_box"
        android:padding="12dp"
        />
    <EditText
        android:id="@+id/etExpensesAmount"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Add Your Expenses Amount(in Rs.)"
        android:background="@drawable/front_box"
        android:inputType="numberDecimal"
        android:padding="12dp"
        />
    <TextView
        android:id="@+id/tvDate"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:background="@drawable/front_box"
        android:padding="12dp"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/tvSave"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Save"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="12dp"
            android:textSize="22sp"
            android:textColor="#000000"
            android:background="@drawable/front_box"
            />
        <View
            android:layout_height="1dp"
            android:layout_width="10dp"
            />
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:padding="12dp"
            android:textSize="22sp"
            android:textColor="#000000"
            android:background="@drawable/front_box"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show List"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@drawable/button"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        />
</LinearLayout>